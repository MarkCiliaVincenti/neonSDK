<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net48; net6.0; net7.0</TargetFrameworks>
        <Configurations>Debug;Release</Configurations>
        <GenerateDocumentationFile>false</GenerateDocumentationFile>
        <ModelGenToolPath>$(NF_ROOT)\Tools\neon-modelgen\bin\$(Configuration)\net7.0\win-x64\neon-modelgen.exe</ModelGenToolPath>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="$(NF_ROOT)\Lib\Neon.BuildInfo\AssemblyAttributes.cs" Link="Properties\AssemblyAttributes.cs" />
        <Compile Include="$(NF_ROOT)\Lib\Neon.BuildInfo\AssemblyInfo.cs" Link="Properties\AssemblyInfo.cs" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="CouchbaseNetClient" Version="2.7.27" />
        <PackageReference Include="Linq2Couchbase" Version="1.4.2" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\Lib\Neon.BuildInfo\Neon.BuildInfo.csproj" />
        <ProjectReference Include="..\Test.Neon.Models.Definitions\Test.Neon.Models.Definitions.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Properties\" />
    </ItemGroup>

    <Target Name="ModelGen"
                Inputs="$(NF_ROOT)\Test\Test.Neon.Models.Definitions\bin\$(Configuration)\netstandard2.0\Test.Neon.Models.Definitions.dll"
                Outputs="$(ProjectDir)GeneratedUxTypes.mg.cs"
                BeforeTargets="CoreCompile"
                DependsOnTargets="BeforeCompile">
        <!--- Generate the model source files -->
        <Exec Command="&quot;$(ModelGenToolPath)&quot; --target-namespace=Test.Neon.Models --persisted --debug-allow-stepinto &quot;$(NF_ROOT)\Test\Test.Neon.Models.Definitions\bin\$(Configuration)\netstandard2.0\Test.Neon.Models.Definitions.dll&quot; &quot;$(ProjectDir)GeneratedTypes.mg.cs&quot;" />
        <Exec Command="&quot;$(ModelGenToolPath)&quot; --target-namespace=Test.Neon.UxModels --persisted --ux=xaml &quot;$(NF_ROOT)\Test\Test.Neon.Models.Definitions\bin\$(Configuration)\netstandard2.0\Test.Neon.Models.Definitions.dll&quot; &quot;$(ProjectDir)GeneratedUxTypes.mg.cs&quot;" />
        <ItemGroup>
            <!--- Ensure that the new files are included in the build -->
            <Compile Include="**\*.cs" KeepDuplicates="false" />
            <Compile Remove="bin/**/*.cs" />
            <Compile Remove="obj/**/*.cs" />
            <Compile Include="bin/$(Configuration)/*.cs" />
            <Compile Include="obj/$(Configuration)/*.cs" />
        </ItemGroup>
    </Target>

</Project>