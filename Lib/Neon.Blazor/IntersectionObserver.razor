@namespace Neon.Blazor

@inherits HtmlElement

<CascadingValue Value=this>
    <HtmlElement @attributes="Attributes"
                 Id="@Id"
                 @ref="@rootElement"
                 @onintersectionchanged="@((args) => OnIntersectionChangedInternal(args))">
        @ChildContent
    </HtmlElement>
</CascadingValue>
