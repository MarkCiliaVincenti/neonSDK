@namespace Neon.Blazor

<HtmlElement id="@Id"
             @ref="rootElement"
             @onintersectionchanged=@OnIntersectionChangedInternal
             class="@Class"
            >
    <CascadingValue Value=this>
        @ChildContent?.Invoke(this.IntersectionObserverContext)
    </CascadingValue>
</HtmlElement>