<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<ImplicitUsings>disable</ImplicitUsings>
		<RootNamespace>TestTailwind</RootNamespace>
		<OutputType>Exe</OutputType>
		<IsPackable>false</IsPackable>
		<Configurations>Debug;Release</Configurations>
		<GenerateDocumentationFile>false</GenerateDocumentationFile>
	</PropertyGroup>

	<ItemGroup>
		<Compile Include="$(SolutionDir)\Lib\Neon.BuildInfo\AssemblyAttributes.cs" Link="Properties\AssemblyAttributes.cs" />
		<Compile Include="$(SolutionDir)\Lib\Neon.BuildInfo\AssemblyInfo.cs" Link="Properties\AssemblyInfo.cs" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\Lib\Neon.BuildInfo\Neon.BuildInfo.csproj" />
		<ProjectReference Include="..\..\Lib\Neon.Blazor\Neon.Blazor.csproj" />
		<ProjectReference Include="..\..\Lib\Neon.Common\Neon.Common.csproj" />
		<ProjectReference Include="..\..\Lib\Neon.Tailwind\Neon.Tailwind.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Watch Include="**\*.razor" />
		<Watch Include="**\*.cshtml" />
	</ItemGroup>

	<ItemGroup>
		<Watch Remove="Components\Disclosure.razor" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="HeroIcons.Blazor" Version="1.0.6" />
	</ItemGroup>

	<ItemGroup>
		<Content Update="wwwroot\css\bootstrap\bootstrap.min.css">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Update="wwwroot\css\open-iconic\font\css\open-iconic-bootstrap.min.css">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Update="wwwroot\css\site.css">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

</Project>
